    # Règle de réécriture
    RewriteCond %{REQUEST_URI} ^/mon-contexte-1$
    RewriteRule ^/mon-contexte-1$ /mon-contexte-2 [R=301,L]

    # Autres configurations pour ce VirtualHost
    # ...
</VirtualHost>
