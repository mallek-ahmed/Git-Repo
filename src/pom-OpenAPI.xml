<project>
  <modelVersion>4.0.0</modelVersion>
  <properties>
    <java.version>17</java.version>
    <spring-boot.version>3.5.2</spring-boot.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>${spring-boot.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <!-- Spring MVC -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <!-- ✅ SpringDoc pour Spring MVC + Swagger UI -->
    <dependency>
      <groupId>org.springdoc</groupId>
      <artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
      <version>2.2.0</version>
    </dependency>

    <!-- (facultatif) validation @Parameter/@Valid -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-validation</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Packaging Spring Boot -->
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
      </plugin>

      <!-- ✅ Génération OpenAPI à la build (via /v3/api-docs) -->
      <plugin>
        <groupId>org.springdoc</groupId>
        <artifactId>springdoc-openapi-maven-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <id>generate-openapi</id>
            <phase>verify</phase>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <!-- Le plugin lance l’app dans un process forké et lit /v3/api-docs -->
              <apiDocsUrl>http://localhost:8080/v3/api-docs</apiDocsUrl>
              <outputDir>${project.build.directory}</outputDir>
              <outputFileName>openapi</outputFileName>
              <outputFormat>JSON,YAML</outputFormat>
              <waitTime>10000</waitTime>

              <!-- Active un profil pour démarrer "léger" (cf. §2) -->
              <properties>
                <property>spring.profiles.active=openapi</property>
                <property>server.port=8080</property>
                <!-- si besoin: désactiver la sécu pendant la génération -->
                <property>spring.security.enabled=false</property>
                <property>spring.autoconfigure.exclude=\
org.springframework.boot.autoconfigure.jdbc.DataSourceAutoConfiguration</property>
              </properties>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
